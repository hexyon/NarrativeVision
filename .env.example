# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/visionthread

# Environment
NODE_ENV=development
PORT=5000

# AI API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
# OR for production, paste the entire service account JSON as a string:
# GOOGLE_APPLICATION_CREDENTIALS={"type":"service_account","project_id":"your-project",...}

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_storage_bucket_name

# Optional: Gemini API (Google AI)
GEMINI_API_KEY=your_gemini_api_key_here

# Session Configuration (optional)
SESSION_SECRET=your_session_secret_key_here
